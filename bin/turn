#!/usr/bin/env ruby
require_relative '../lib/turn.rb'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

  def turn(board)
  puts "Gib Input"
  input =  gets.strip
  index = input_to_index(input)
  if valid_move?(board,index) == true
    move(board, index)
    display_board(board)
    flag = "true"
  else
    puts "invalid move"
  flag = "false"
  end
end

flag = " "
until flag == "true"
  turn(board)
end
